<div class="py-[30px] px-4 w-[95vw] lg:max-w-6xl mx-auto">
  {% if collection.products_count != 0 %}
    <h3 class="text-xl uppercase font-semibold mb-3">{{ collection.title }} ({{ collection.products_count }})</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {% paginate collection.products by 10 %}
        {% for product in collection.products %}
          {% render 'product-item'
            ,
 {
 currentProduct: product
            ,
 autoWidth: true
 } %}
        {% endfor %}
        {{ paginate | default_pagination }}
      {% endpaginate %}
    </div>
  {% else %}
    <p class="mb-3 text-base font-semibold uppercase text-orange-600">Not Exist any Products</p>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Main Collection",
    "settings": []
  }
{% endschema %}