<div class="py-[30px] px-4 w-[95vw] lg:max-w-2xl mx-auto">
  <div>
    <h2 class="text-4xl font-bold text-center mb-8">Track Your Order</h2>
    <div class="flex-wrap px-4 flex gap-2 items-center">
        <!-- Tracking number input box. -->
      <input
        placeholder="Enter your order number"
        class="flex-1 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
        maxlength="50"
        id="YQNum"
        type="text"
        onkeydown="handleKeyDown(event)">
        <!-- The button is used to call script method. -->
      <input
        class="inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer"
        value="TRACK"
        type="button"
        onclick="doTrack()">
      <!-- Container to display the tracking result. -->
    </div>
  </div>
</div>
<div class="px-6" id="YQContainer"></div>
<!-- Script code can be put in the bottom of the page, wait until the page is loaded then execute. -->
<script type="text/javascript" src="//www.17track.net/externalcall.js"></script>
<script type="text/javascript">
  function doTrack() {
    var num = document.getElementById("YQNum").value;
    if(num.trim() === ""){
        alert("Enter your number."); 
        return;
    }
    YQV5.trackSingle({
        //Required, Specify the container ID of the carrier content.
        YQ_ContainerId:"YQContainer",
        //Optional, specify tracking result height, max height 800px, default is 560px.
        YQ_Height:900,
        //Optional, select carrier, default to auto identify.
        YQ_Fc:"0",
        //Optional, specify UI language, default language is automatically detected based on the browser settings.
        YQ_Lang:"en",
        //Required, specify the number needed to be tracked.
        YQ_Num:num
    });
  }
  
   const handleKeyDown = (event) => {
    // Check if the key pressed is Enter (key code 13)
    if (event.keyCode === 13) {
      doTrack();
    }
  };
</script>
{% schema %}
  {
    "name": "Main Track Order",
    "settings": []
  }
{% endschema %}