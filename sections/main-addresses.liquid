<div class="addresses-page py-8">
  <h2 class="text-4xl font-bold text-center mb-8">Your Addresses</h2>
  <div class="max-w-6xl mx-auto bg-white p-8 shadow-lg rounded-lg">

    <!-- List of Addresses -->
    <div class="mb-8">
      {% if customer.addresses.size > 0 %}
        <ul class="space-y-4">
          {% for address in customer.addresses %}
            <li class="border border-gray-200 p-4 rounded-lg">
              <div class="flex justify-between items-center mb-2">
                <h3 class="text-xl font-semibold">{{ address.first_name }} {{ address.last_name }}</h3>
                <div class="flex items-center gap-x-3">
                  <button onclick="my_modal_3.showModal()" class="text-blue-500 hover:underline">Edit</button>
                  <form
                    class="address-delete-form"
                    method="post"
                    action="/account/addresses/{{ address.id }}">
                    <input
                      type="hidden"
                      name="_method"
                      value="delete">
                    <button type="submit" class="text-red-500 hover:underline ml-2">Delete</button>
                  </form>
                </div>
              </div>
              <p class="text-gray-700">{{ address.address1 }}<br>
                {% if address.address2 %}
                  {{ address.address2 }}<br>{% endif %}
                {{ address.city }}, {{ address.province }} {{ address.zip }}<br>
                {{ address.country }}</p>
            </li>
            <dialog id="my_modal_3" class="modal">
              <div class="modal-box">
                <form method="dialog">
                  <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
                </form>
                {% comment %} form edit {% endcomment %}
                {% form 'customer_address'
                  , address %}
                  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[first_name]"
                      placeholder="First Name"
                      value="{{ form.first_name }}"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[last_name]"
                      value="{{ form.last_name }}"
                      placeholder="Last Name"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[company]"
                      value="{{ form.company }}"
                      placeholder="Company">
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[address1]"
                      value="{{form.address1}}"
                      placeholder="Address 1"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[address2]"
                      value="{{ form.address2 }}"
                      placeholder="Address 2">
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[city]"
                      value="{{ form.city }}"
                      placeholder="City"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[province]"
                      value="{{ form.province }}"
                      placeholder="Province/State"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[zip]"
                      value="{{ form.zip }}"
                      placeholder="Postal/ZIP Code"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="text"
                      name="address[country]"
                      value="{{ form.country }}"
                      placeholder="Country"
                      required>
                    <input
                      class="border border-gray-300 p-2 rounded"
                      type="tel"
                      name="address[phone]"
                      value="{{ form.phone }}"
                      placeholder="Phone">
                  </div>
                  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Edit</button>
                {% endform %}
              </div>
            </dialog>
          {% endfor %}
        </ul>
      {% else %}
        <p class="text-gray-700">You have no saved addresses.</p>
      {% endif %}
    </div>

    <!-- Add New Address Form -->
    <div>
      <h3 class="text-2xl font-semibold mb-4">Add a New Address</h3>
      {% form 'customer_address'
        , customer.new_address %}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[first_name]"
            placeholder="First Name"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[last_name]"
            placeholder="Last Name"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[company]"
            placeholder="Company">
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[address1]"
            placeholder="Address 1"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[address2]"
            placeholder="Address 2">
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[city]"
            placeholder="City"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[province]"
            placeholder="Province/State"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[zip]"
            placeholder="Postal/ZIP Code"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="text"
            name="address[country]"
            placeholder="Country"
            required>
          <input
            class="border border-gray-300 p-2 rounded"
            type="tel"
            name="address[phone]"
            placeholder="Phone">
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add Address</button>
      {% endform %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Main Addresses",
    "settings": []
  }
{% endschema %}