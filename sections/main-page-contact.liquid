<div class="container mx-auto py-12">
  <h2 class="text-4xl font-bold text-center mb-8">Contact Us</h2>
  <div class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg">
    {% form 'contact' %}
      {{ form.errors | default_errors }}

      <div class="mb-4">
        <label for="ContactFormName" class="block text-sm font-medium text-gray-700">Name</label>
        <input
          type="text"
          id="ContactFormName"
          name="contact[name]"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
          required>
      </div>

      <div class="mb-4">
        <label for="ContactFormEmail" class="block text-sm font-medium text-gray-700">Email</label>
        <input
          type="email"
          id="ContactFormEmail"
          name="contact[email]"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
          required>
      </div>

      <div class="mb-4">
        <label for="ContactFormSubject" class="block text-sm font-medium text-gray-700">Subject</label>
        <input
          type="text"
          id="ContactFormSubject"
          name="contact[subject]"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>

      <div class="mb-4">
        <label for="ContactFormMessage" class="block text-sm font-medium text-gray-700">Message</label>
        <textarea
          id="ContactFormMessage"
          name="contact[body]"
          rows="4"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
          required></textarea>
      </div>

      <div>
        <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          {{ section.settings.btn_text }}
        </button>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
  {
    "name": "Main Page Contact",
    "settings": [
      {
        "type": "text",
        "id": "btn_text",
        "label": "Text",
        "default": "Send Message"
      }
    ]
  }
{% endschema %}