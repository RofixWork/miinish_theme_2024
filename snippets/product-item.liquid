<style>
  .swiper-pagination-bullet-active {
    background-color: #A49F67 !important;
  }
</style>
<a href="{{ currentProduct.url }}">
  <div class="card {% if autoWidth != blank %} w-full {% else %} md:w-96  {% endif %} bg-base-100 shadow overflow-hidden">
    <figure class="h-[340px] md:h-[400px] ">
      <img
        src="{{ currentProduct.featured_image | image_url: width: 5000 }}"
        height="100%"
        width="100%"
        class="w-full h-full"
        alt="{{currentProduct.title}}"
      >
    </figure>
    <div class="card-body bg-white border-t border-gray-100">
      <div class="badge bg-[#CD8C0A] font-semibold text-white">NEW</div>
      <h2 class="card-title text-base capitalize">
        {{ currentProduct.title }}
      </h2>
      <p class="text-xs leading-6 text-gray-700 mb-3 h-[80px]">
        {% if currentProduct.metafields.custom.short_product_desc != blank %}
          {{ currentProduct.metafields.custom.short_product_desc | truncate: 150 }}
        {% else %}
          {{ currentProduct.content | truncate: 150 | strip_html }}
        {% endif %}
      </p>
      <div class="card-actions justify-end">
        <a
          href="{{currentProduct.url}}"
          class="btn btn-sm md:btn-md text-sm md:text-base bg-[#A49F67] text-white hover:bg-white hover:text-[#A49F67] transition-all"
          >Shop Now</a
        >
      </div>
    </div>
  </div>
</a>
